		<Style Selector="TabStripItem:selected">
			<Setter Property="Background" Value="{DynamicResource CardPointerOverBackground}" />
		</Style>

		<Style Selector="TabStripItem">
			<Setter Property="CornerRadius" Value="7.5 7.5 0 0" />
		</Style>

		<Style Selector="TabStripItem:pointerover">
			<Setter Property="Background" Value="{DynamicResource CardPointerOverBackground}" />
		</Style>
