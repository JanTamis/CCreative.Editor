<FluentWindow xmlns="https://github.com/avaloniaui"
							xmlns:svg="using:Avalonia.Svg.Skia"
							xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
							xmlns:vm="using:CCreative.Editor.ViewModels"
							xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
							xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
							xmlns:aura="using:Aura.UI.Controls"
							xmlns:AvalonEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
							mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
							x:Class="CCreative.Editor.Views.MainWindow"
							Icon="/Assets/avalonia-logo.ico"
							Title="CCreative"
							x:Name="MainWindow"
							Background="{DynamicResource ContentBackground}"
							MinWidth="600"
							MinHeight="400"
							Width="900"
							Height="600"
							WindowStartupLocation="CenterScreen" >

	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>
	
	<Panel Margin="{Binding #MainWindow.OffScreenMargin}">

		<Border VerticalAlignment="Top"
						IsHitTestVisible="False"
						Height="{Binding #MainWindow.WindowDecorationMargin.Top}"
						Background="{DynamicResource Background}"
						BoxShadow="{BoxShadow BlurRadius=2, ShadowColor=black}">
			<TextBlock Text="{Binding #MainWindow.Title}"
							 VerticalAlignment="Center"
							 HorizontalAlignment="Center" />
		</Border>

		<Menu VerticalAlignment="Top"
					HorizontalAlignment="Left"
					Height="{Binding #MainWindow.WindowDecorationMargin.Top}"
					IsHitTestVisible="True">
			<MenuItem Header="File" />
			<MenuItem Header="Edit" />
			<MenuItem Header="View" />
			<MenuItem Header="Plugins" />
		</Menu>
		
		<Border Margin="{Binding #MainWindow.WindowDecorationMargin}">
			<Grid RowDefinitions="Auto, *">

				<Border VerticalAlignment="Top"
								HorizontalAlignment="Left"
								CornerRadius="10"
								Margin="10 10 10 0"
								Background="{DynamicResource Background}"
								BoxShadow="{BoxShadow BlurRadius=2, ShadowColor=black}">
					<StackPanel Orientation="Horizontal" >

						<Button Padding="5"
										CornerRadius="10 0 0 10"
										Background="{DynamicResource Background}">
							<Viewbox Margin="0"
											 Width="35">
								<Image Source="{svg:SvgImage /Assets/UIAssets/Play.svg}" />
							</Viewbox>
						</Button>

						<Button Padding="5"
										CornerRadius="0 10 10 0"
										Background="{DynamicResource Background}">
							<Viewbox Margin="0"
											 Width="35">
								<Image Source="{svg:SvgImage /Assets/UIAssets/Stop.svg}" />
							</Viewbox>
						</Button>

					</StackPanel>
				</Border>

				<Border Background="{DynamicResource Background}"
								BoxShadow="{BoxShadow BlurRadius=2, ShadowColor=black}"
								Margin="10"
								CornerRadius="10"
								Padding="0 5"
								Grid.Row="2">
					<AvalonEdit:TextEditor Name="Editor"
																	FontFamily="Cascadia Code"
																	Background="Transparent"
																	ShowLineNumbers="True"
																	SyntaxHighlighting="C#"
																	HorizontalScrollBarVisibility="Auto"
																	VerticalScrollBarVisibility="Auto"
																	FontWeight="Light"
																	FontSize="18" />
				</Border>

				

				<!--<aura:AuraTabView Background="Transparent"
													BorderThickness="0"
													Grid.Row="2">
					<AuraTabItem Background="{DynamicResource Background}"
											 Opacity="1"
											 Header="hello" >

					</AuraTabItem>

					<AuraTabItem Background="{DynamicResource Background}"
											 Opacity="1"
											 Header="world" >

					</AuraTabItem>
				</aura:AuraTabView>-->
			</Grid>
		</Border>
	</Panel>
</FluentWindow>