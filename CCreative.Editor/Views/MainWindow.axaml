				<!-- </Border> -->
				
				<TabStrip Grid.Row="1">
					<TabStripItem Content="hello" />
				</TabStrip>
				
				<avalonEdit:TextEditor Name="Editor"
				                       Grid.Row="2"
				                       FontFamily="avares://CCreative.Editor/Assets/CascadiaCode.ttf#Cascadia Code"
				                       Background="Transparent"
				                       ShowLineNumbers="True"
				                       SyntaxHighlighting="C#"
				                       HorizontalScrollBarVisibility="Auto"
				                       VerticalScrollBarVisibility="Auto"
				                       FontWeight="Light"
				                       FontSize="18" />
				
			</Grid>
		</Border>
	</Panel>
</views:FluentWindow>