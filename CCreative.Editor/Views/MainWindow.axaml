<views:FluentWindow xmlns="https://github.com/avaloniaui"
							xmlns:svg="using:Avalonia.Svg.Skia"
							xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
							xmlns:vm="using:CCreative.Editor.ViewModels"
							xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
							xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
							xmlns:aura="using:Aura.UI.Controls"
							xmlns:styles="clr-namespace:Material.Styles;assembly=Material.Styles"
							xmlns:assist="clr-namespace:Material.Styles.Assists;assembly=Material.Styles"
							xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
							xmlns:avalonEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit"
							xmlns:roslynPad="clr-namespace:RoslynPad.Editor;assembly=RoslynPad.Editor.Avalonia"
							xmlns:views="clr-namespace:CCreative.Editor.Views"
							mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
							x:Class="CCreative.Editor.Views.MainWindow"
							Icon="/Assets/avalonia-logo.ico"
							Title="CCreative"
							x:Name="MainWindow"
							MinWidth="600"
							MinHeight="400"
							Width="900"
							Height="600"
							WindowStartupLocation="CenterScreen" >

	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>
	
	<Panel Margin="{Binding #MainWindow.OffScreenMargin}">

		<Border VerticalAlignment="Stretch"
						IsHitTestVisible="False"
						Height="{Binding #MainWindow.WindowDecorationMargin.Top}"
						Background="{DynamicResource Background}"
						BoxShadow="{BoxShadow BlurRadius=2, ShadowColor=black}">
			<TextBlock Text="{Binding #MainWindow.Title}"
							 VerticalAlignment="Center"
							 HorizontalAlignment="Center" />
		</Border>

		<Menu VerticalAlignment="Top"
					HorizontalAlignment="Left"
					Height="{Binding #MainWindow.WindowDecorationMargin.Top}"
					IsHitTestVisible="True">
			<MenuItem Header="File" />
			<MenuItem Header="Edit" />
			<MenuItem Header="View" />
			<MenuItem Header="Plugins" />
		</Menu>
		
		<!-- <NativeMenuBar> -->
		<!-- 	<NativeMenuItem Header="File"> -->
		<!-- 		 -->
		<!-- 	</NativeMenuItem> -->
		<!-- 	<NativeMenuItem Header="Edit"> -->
		<!-- 		 -->
		<!-- 	</NativeMenuItem> -->
		<!-- 	<NativeMenuItem Header="View"> -->
		<!-- 		 -->
		<!-- 	</NativeMenuItem> -->
		<!-- 	<NativeMenuItem Header="Plugins"> -->
		<!-- 		 -->
		<!-- 	</NativeMenuItem> -->
		<!-- </NativeMenuBar> -->
		
		<Border Margin="{Binding #MainWindow.WindowDecorationMargin}">
			
			<Grid RowDefinitions="Auto,Auto,*">
				
				<StackPanel Orientation="Horizontal"
				            Margin="10">
					<Button assist:ButtonAssist.CornerRadius="50"
					        assist:ShadowAssist.ShadowDepth="Depth0"
					        Padding="5"
					        Margin="0 0 5 0"
					        HorizontalAlignment="Left">
						<avalonia:MaterialIcon Kind="Play" Width="40" Height="40"/>
					</Button>
						
					<Button assist:ButtonAssist.CornerRadius="50"
					        assist:ShadowAssist.ShadowDepth="Depth0"
					        Padding="5"
					        HorizontalAlignment="Left">
						<avalonia:MaterialIcon Kind="Stop" Width="40" Height="40"/>
					</Button>
				</StackPanel>
				
				<TabStrip Grid.Row="1">
					<TabStrip.ItemsPanel>
						<ItemsPanelTemplate>
							<UniformGrid Rows="1" 
							             HorizontalAlignment="Stretch" />
						</ItemsPanelTemplate>
					</TabStrip.ItemsPanel>
					<TabStripItem >
						<Viewbox MaxHeight="30">
							<TextBlock Text="Hello" />
						</Viewbox>
					</TabStripItem>
					
					<TabStripItem >
						<Viewbox MaxHeight="30">
							<TextBlock Text="Hello" />
						</Viewbox>
					</TabStripItem>
				</TabStrip>
				
				<roslynPad:RoslynCodeEditor Name="Editor"
				                       Grid.Row="2"
				                       FontFamily="avares://CCreative.Editor/Assets/CascadiaCode.ttf#Cascadia Code"
				                       Background="Transparent"
				                       SyntaxHighlighting="C#"
				                       HorizontalScrollBarVisibility="Auto"
				                       VerticalScrollBarVisibility="Auto"
				                       FontWeight="Light"
				                       FontSize="18" />
				
			</Grid>
		</Border>
	</Panel>
</views:FluentWindow>